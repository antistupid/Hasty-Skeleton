{% extends 'layout.login.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <p>
            <h3>Login</h3> <hr>
            </p>
            {% include "flash.twig" %}
            <form action="/login" method="post">
                <div class="form-group">
                    <input name="username" type="text" class="form-control" id="exampleInputEmail1" placeholder="Username">
                </div>
                <div class="form-group">
                    <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-default login-button">Login</button>
            </form>
            <br>
            Don't have account? <a href="/signup">Signup</a>
        </div>
    </div>
{% endblock %}
